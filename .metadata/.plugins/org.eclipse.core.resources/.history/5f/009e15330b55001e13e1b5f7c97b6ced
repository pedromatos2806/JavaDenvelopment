package entities;
import exceptions.RendaBrutaNegativeException;

public class PessoaFisica extends Contribuinte {
	
	public PessoaFisica(String nome, double rendaBruta) {
		super(nome, rendaBruta);
	}

	public double calcImposto() throws RendaBrutaNegativeException {
			if(getRendaBruta() < 0){
				throw new RendaBrutaNegativeException();
			}
			else if(getRendaBruta()	>= 0 && getRendaBruta() <=	1400  ) {
				return 0;
			}else if(getRendaBruta() > 1400 && getRendaBruta() <= 2100){
				return getRendaBruta()*0.1 + 100;
			}else if(getRendaBruta() > 2100 && getRenda() <= 2800) {
				return 0.15*getRenda() + 270;
			}else if(getRenda() >2800 && getRenda() <=3600) {
				return getRenda()*0.25 + 500;
			}else if( getRenda() > 3600) {
				return getRenda() *0.3 + 700;
			}
			return -1;
	}
	
	@Override
	public String toString() {
		try {
			return  "Nome do Contribuinte: "
					+ getNome(nome)
					+ "Imposto a pagar:"
					+ calcImposto();
		}catch ( RendaBrutaNegativeException e) {
			return " ERRO: Renda Bruta Negativa";
		}
	}
}
