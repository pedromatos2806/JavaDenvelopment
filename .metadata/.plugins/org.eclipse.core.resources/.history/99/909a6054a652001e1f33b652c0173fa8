
public class ContaEspecial  extends ContaBancaria{
	private double limite; //100 saldo=100 
	
	public ContaEspecial(String nomeCliente, String numConta, double saldo, double limite) {
		super(nomeCliente, numConta, saldo);
		this.limite = limite;
		// TODO Auto-generated constructor stub
	}
	
	@Override
	public void Sacar(double value) throws Exception{
		if(value <= super.getSaldo() + limite) {
			value -= super.getSaldo();
			super.Sacar(value);
		}else {
			throw new Exception() ;
		}
	}

	//Pq nÃ£o pode por o Override aqui?
	@Override
	public String toString() {
		String saldoString = Double.toString(super.getSaldo());
		return saldoString;
	}
}
