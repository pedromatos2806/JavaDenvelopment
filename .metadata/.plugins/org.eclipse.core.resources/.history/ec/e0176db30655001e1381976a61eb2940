package entities;
import exceptions.RendaBrutaNegativeException;
public class PessoaFisica {
	
	private double rendaBruta;
	
	public double getRenda() {
		return rendaBruta;
	}
	
	public void setRendaBruta(double rendaBruta) {
		this.rendaBruta = rendaBruta;
	}
	
	public PessoaFisica (double rendaBruta){
		this.rendaBruta = rendaBruta;
	}
	
	public double calcImposto() throws RendaBrutaNegativeException {
			if(rendaBruta < 0){
				throw new RendaBrutaNegativeException();
			}
			else if(rendaBruta	>= 0 && rendaBruta <=	1400  ) {
				return 0;
			}else if(rendaBruta > 1400 && rendaBruta <= 2100){
				return rendaBruta*0.1 + 100;
			}else if(rendaBruta>2100 && rendaBruta <=2800) {
				return 0.15*rendaBruta + 270;
			}else if(rendaBruta >2800 && rendaBruta <=3600) {
				return rendaBruta*0.25 + 500;
			}else if(rendaBruta > 3600) {
				return rendaBruta*0.3 + 700;
			}
			return -1;
	}
	
	@Override
	public String toString() {
		try {
			return "Imposto a pagar: " + calcImposto();
		}catch ( RendaBrutaNegativeException e) {
			return " ERRO: Renda Bruta Negativa";
		}
	}
}
