
public class ContaPoupanca extends ContaBancaria{
	private double diaRendimento;
	
	public double getRendimento() {
		return diaRendimento;
	}
	
	public ContaPoupanca (String nomeCliente, String numConta, double saldo,double diaRendimento) {
		super(nomeCliente,numConta,saldo);
		this.diaRendimento = diaRendimento;
	}
	
	public void calcularRendimento() throws Exception{
		 if (saldo < 0) {
				throw new Exception() ;
		 }else {
				double novoRendimento = this.saldo * (this.diaRendimento/100);
				super.Depositar(novoRendimento);
		 }
	}
	
	@Override
	public String toString() {
		String saldoString = Double.toString(saldo);
		return "Nome: "
				+getNomeCliente()
				+"\nNumero da conta: "
				+getNumConta()
				+"\nSaldo"
				+saldoString.toString()
				+"\nRendimento: "
				+getRendimento();
	}
}